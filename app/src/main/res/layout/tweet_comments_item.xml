<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/comment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tweet_name_color"
        android:textSize="@dimen/tweet_comment_username_font_size"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/tweet_comment_username_margin_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="JsonLI:"
        />

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tweet_comment_content_font_size"
        android:layout_marginStart="@dimen/tweet_comment_content_margin_start"
        app:layout_constraintStart_toEndOf="@+id/comment_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/comment_username"
        tools:text="Like it tooasdfffffffffffff ffffffffffffffffffffffffffffffffffffffffffasdf"
        />


</androidx.constraintlayout.widget.ConstraintLayout>